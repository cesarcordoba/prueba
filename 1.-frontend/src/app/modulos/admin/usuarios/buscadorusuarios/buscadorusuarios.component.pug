mat-card.autocomplete
    .contenedor-buscador-usuarios
        form(class="example-form", [formGroup]='formulario')
            mat-form-field
                input(matInput, placeholder="Buscar usuario   ", [matAutocomplete]="auto", formControlName='input')

        mat-autocomplete(#auto="matAutocomplete")
            mat-option(*ngIf="isLoading", class="is-loading")
                mat-spinner(diameter="50")
            ng-container(*ngIf="!isLoading")
                mat-option(*ngFor="let item of itemsfiltrados", [value]="item")
                    span {{ item.nombre }}