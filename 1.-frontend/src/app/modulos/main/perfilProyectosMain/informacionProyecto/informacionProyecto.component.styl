@import  '../../../../../defaults.styl'
.proyecto-container
    background-color white
    height 500px
    width 850px
    .proyecto-content
        display flex
        flex-direction row
        justify-content center
        align-items center
        .texto
            height 460px
            width 330px
            position relative
            .circulo-porcentaje
                position absolute
                border 3px solid #00838e
                border-radius 40px
                top 28px
                right -26px
                width 50px
                height 50px
                display flex
                justify-content center
                align-items center
                background-color white
                z-index 10
                p
                    margin 0
                    font-size 18px
                    font-weight bolder
                    background -webkit-linear-gradient(#009A8C, #003B94)
                    -webkit-background-clip text
                    -webkit-text-fill-color transparent
            .encabezado
                padding 10px
                height 35px
                h4
                    margin 0
                    font-size 20px
            .mat-progress-bar 
                &.mat-warn 
                    .mat-progress-bar-fill 
                        &::after 
                            background-color #00838e
                    .mat-progress-bar-buffer 
                        background-color #dff3fd
            .fechas
                margin-top 10px
                h1, h4, p
                    margin 0
                    text-align center
                    margin-bottom 10px
                    margin-top 10px
                h1
                    font-size 23px
                h4
                    font-size 14px
                    color gray
                p
                    font-size 14px
                .linea-separacion
                    height 1px
                    background-color rgba(220,220,220,0.9)
            .extras
                padding 10px
                width 300px
                position relative
                .tipo-inversion, .meta, .minimo, .plazo, .rendimiento, .retorno, .pago-utilidades
                    height 35px
                    display flex
                    flex-direction row
                    justify-content center
                    align-items center
                    .atributo
                        p
                            font-size 12px
                            margin 0
                    .linea-atributo
                        width 100%
                        height 1px
                        background-color rgba(220,220,220,0.6)
                    .valor
                        h4
                            text-align right 
                            font-size 12px
                            margin 0
                .tipo-inversion
                    .atributo
                        width 235px
                .meta
                    .atributo
                        width 184px
                .minimo
                    .atributo
                        width 225px
                .plazo
                    .atributo
                        width 160px
                .rendimiento
                    .atributo
                        width 250px
                .retorno
                    .atributo
                        width 280px
                .pago-utilidades
                    .atributo
                        width 95px
        .imagen
            width 520px
            height 500px
            img
                width 100%
                height 100%