@import  '../../../../../../defaults.styl'

.boxshadow
	box-shadow 0 1px 3px 0 rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 2px 1px -1px rgba(0,0,0,.12)

.nosotros-container, .nosotros-content
	display flex
	flex-direction column
	justify-content center
	align-items center
	.nosotros-content
		width 58%

.detalles
	p
		margin 0px

.slider
	height 300px
	width 850px
	display flex
	align-items center
ngx-slick
	width 100%
.slick-slide
	width 200px !important
	height 200px !important
	margin-right 1vw
	&:focus
		outline 0px
.slick-slider
	.slick-arrow
		height 100px !important
		width 50px !important
		z-index 1
		background-color white !important
		@extends .boxshadow
		&:hover
			background-color azul
			color white
		&:before
			color azul
		&.slick-prev
			left 25px
			@media mobile
				left -25px
			&:before
				font-family "Material Icons"
				content "keyboard_arrow_left"
				color black
		&.slick-next
			right 25px
			@media mobile
				right -25px
			&:before
				font-family "Material Icons"
				content "keyboard_arrow_right"
				color black
