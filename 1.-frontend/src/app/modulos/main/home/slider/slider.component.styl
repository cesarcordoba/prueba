
@import  '../../../../../defaults.styl'

.boxshadow
	box-shadow 0 1px 3px 0 rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 2px 1px -1px rgba(0,0,0,.12)
ngx-slick
	width 100%

.slider-principal
	.slider
		height 500px !important
		display flex
		align-items center
		.slick-dotted.slick-slider
			margin-bottom inherit !important
		.carousel
			height 500px
			.slick-list
				height 500px
				.slick-track
					height 500px
					.slide
						&:focus
							outline 0px
						.imagen-principal
							cursor pointer
							height 500px
							img
								width 100%
								height 100%
								
	.slick-dots
		bottom 20px
		button
			&:before
				color white
				font-size 25px
		.slick-active
			button
				&:before
					color white
					font-size 25px
	.barra-degradada-principal
		height 82px
		background-image linear-gradient(to right, #003B94 , #009A8C)