@import  '../../../../defaults.styl'
.filtros-home
    margin-top 20px
    display flex
    flex-direction row
    justify-content center
    align-items center
    .mat-button
        span
            font-size 16px
            font-weight 800
            &:hover
                font-size 16px
                font-weight 800
                background -webkit-linear-gradient(#009A8C, #003B94)
                -webkit-background-clip text
                -webkit-text-fill-color transparent
.barra
    height 5px
    background-image linear-gradient(to right, #003B94 , #009A8C)
.proyectos
    display flex
    flex-direction row
    justify-content center
    align-items flex-start
    margin-top 25px
    filtrosProyectos
        width 20%
    gridProyectosMain
        width 70%