    height 100%
    width 100%
    margin 10px
    position relative
    display flex
    justify-content center
    align-items center
    img
        max-width 100%
        max-height 100%
        overflow hidden
        transition(500ms, 0)
        &:hover
            cursor pointer
            transform scale(1.2)
            transition(500ms, 0)
    .check
        position absolute
        left 50%
        top 50%